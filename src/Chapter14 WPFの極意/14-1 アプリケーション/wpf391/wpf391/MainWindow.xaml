<Window x:Class="wpf391.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf391"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListBox x:Name="lst">
            <ListBoxItem Content="国語" />
            <ListBoxItem Content="算数" />
            <ListBoxItem Content="理科" />
            <ListBoxItem Content="社会" />
            <ListBoxItem Content="英語" />
            <ListBoxItem Content="プログラミング" />
        </ListBox>
        <TextBlock x:Name="text1" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" />
        <Button 
            Click="Button_Click"
            Width="80" Content="投稿" Grid.Row="2" HorizontalAlignment="Right" Margin="2"/>
    </Grid>
</Window>
